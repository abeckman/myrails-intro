-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= @all_ratings.inspect
= @current_ratings.inspect
= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", value = "1", 
      @current_ratings["#{rating}"], :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      - if @header_to_hilite == "title"
        %th.hilite= link_to "Movie Title", {:sort => "title"}, 
          :id => "title_header"
      - else
        %th= link_to "Movie Title", {:sort => "title"}, 
          :id => "title_header"
      %th Rating
      - if @header_to_hilite == "release_date"
        %th.hilite= link_to "Release Date", {:sort => "release_date"}, :id => "release_date_header"
      - else
        %th= link_to "Release Date", {:sort => "release_date"}, :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
